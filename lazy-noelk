#/bin/bash
docker run -it --rm \
    -v "$(pwd):/app" \
    -v "$(pwd)/config:/config" \
    -v "/var/run/docker.sock:/var/run/docker.sock" \
    -p "16827:80" \
    --stop-signal SIGTERM \
    -w /app \
    --env-file env \
    ierceg/node-dev:6.9.1 \
    nodemon -V -d 1 -L -w /app index.js /config/lazy.yaml
